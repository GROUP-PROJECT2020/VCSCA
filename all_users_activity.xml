<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="140dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="45dp"
                android:text="@string/all_users"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/volunteer_bt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="110dp"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/app1" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/hbaryellow" />

        <TextView
            android:id="@+id/volunteer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="112dp"
            android:clickable="true"
            android:fontFamily="@font/gotham"
            android:text="VOLUNTEERS"
            android:textColor="#fdcc0d"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/hbaryellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ngo_bt"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="110dp"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/app2" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/hbargreen" />

        <TextView
            android:id="@+id/ngo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="155dp"
            android:clickable="true"
            android:fontFamily="@font/gotham"
            android:text="NGOs"
            android:textColor="#006600"
            android:textSize="23sp" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="70dp"
            android:src="@drawable/hbargreen" />

    </LinearLayout>

</LinearLayout>

